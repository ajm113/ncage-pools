{
    "babel": {
        "input": "./resources/assets/js/entry.jsx",
        "output": "./public/js",
        "options": {
        }
    },
    "babellint": {
        "input": ["./resources/assets/js/**/*.{js,jsx}", "!node_modules/**"],
        "output": "",
        "options": {
        }
    },
    "sass": {
        "input": "./resources/assets/sass/**/*.scss",
        "output": "./public/css",
        "options": {
            "outputStyle": "compressed",
            "includePaths": "./node_modules"
        }
    },
    "images": {
        "input": "./resources/assets/img/**/*.{png,jpg,gif}",
        "output": "./public/img"
    },
    "autoprefixer": {
        "options": {
            "browsers": ["last 2 versions"]
        }
    }
}
